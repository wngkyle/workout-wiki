// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_POSTGRESQL")
}

model User {
  id                  Int                   @id @default(autoincrement())
  name                String
  email               String                @unique
  password            String 
  postedMovement      Movement[]
  requestedMovement   RequestedMovement[]
}

model RequestedMovement {
  id                  Int                @id @default(autoincrement())
  name                String
  skillLevel          String
  description         String
  exercise            Exercise?          @relation(fields: [exerciseId], references: [id])
  exerciseId          Int?  
  targetMuscle        TargetMuscle?      @relation(fields: [targetMuscleId], references: [id])
  targetMuscleId      Int?
  movementPattern     MovementPattern?   @relation(fields: [movementPatternId], references: [id])
  movementPatternId   Int?
  equipment           Equipment?         @relation(fields: [equipmentId], references: [id])
  equipmentId         Int?
  postedBy            User?              @relation(fields: [postedById], references: [id])
  postedById          Int?
}

model Movement {
  id                  Int                @id @default(autoincrement())
  name                String
  skillLevel          String
  description         String
  exercise            Exercise?          @relation(fields: [exerciseId], references: [id])
  exerciseId          Int?  
  targetMuscle        TargetMuscle?      @relation(fields: [targetMuscleId], references: [id])
  targetMuscleId      Int?
  movementPattern     MovementPattern?   @relation(fields: [movementPatternId], references: [id])
  movementPatternId   Int?
  equipment           Equipment?         @relation(fields: [equipmentId], references: [id])
  equipmentId         Int?
  postedBy            User?              @relation(fields: [postedById], references: [id])
  postedById          Int?
}

model Exercise { 
  id                  Int                   @id @default(autoincrement())
  movement            Movement[]
  requestedMovement   RequestedMovement[]
  type                String
}

model TargetMuscle {
  id                  Int                   @id @default(autoincrement())
  movement            Movement[]
  requestedMovement   RequestedMovement[]
  part                String
}

model MovementPattern {
  id                  Int                   @id @default(autoincrement())
  movement            Movement[]
  requestedMovement   RequestedMovement[]
  pattern             String
}

model Equipment {
  id                  Int                   @id @default(autoincrement())
  movement            Movement[]
  requestedMovement   RequestedMovement[]
  type                String
}



